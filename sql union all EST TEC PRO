

create view v_aluno_uniao_g as
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_arcoverde 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_caruaru 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_fcap
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_fcm 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_fensg
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_fop
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_garanhuns 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_icb
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_matanorte
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_petrolina 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_lato_poli
            union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_esef
        union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_fcap
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_fcm 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_fensg
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_fop
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_garanhuns 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_icb
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_matanorte
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_petrolina 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'EST' as grupo
  from est_strict_poli
       union all
  select distinct cpf, email, nome, campus as unidade, curso as categoria, 'EST' as grupo
  from est_siga_grad
       union all
  select distinct cpf, email, nome, campus as unidade, curso as categoria, 'EST' as grupo
  from est_siga_ead;



  

create view v_func_uniao_g as
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_arcoverde 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_caruaru 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_cisam 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_esef 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_fcap
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_fcm 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_fensg
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_fop
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_garanhuns 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_huoc 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_icb
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_matanorte
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_matasul 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_petrolina 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_poli
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_reitoria 
       union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_salgueiro
        union all
  select distinct cpf, email, nome, unidade, categoria, 'TEC' as grupo
  from func_serratalhada;
  

 
 
 
 
